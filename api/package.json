{
  "name": "@beep/api",
  "version": "1.0.0",
  "description": "GraphQL API for the Beep App",
  "main": "build/index.js",
  "author": "Banks Nussman",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "concurrently --raw \"tsc -w --preserveWatchOutput\" \"node --watch build/index.js\"",
    "db:create": "mikro-orm schema:create --run",
    "db:update": "mikro-orm schema:update --run",
    "db:drop": "mikro-orm schema:drop --run",
    "db:migrate": "mikro-orm migration:up",
    "db:migration:create": "mikro-orm migration:create"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./build/mikro-orm.config.js"
    ]
  },
  "dependencies": {
    "@apollo/server": "^4.7.0",
    "@banksnussman/graphql-fields-to-relations": "^2.0.0",
    "@mikro-orm/core": "5.7.4",
    "@mikro-orm/postgresql": "5.7.4",
    "@sentry/integrations": "^7.50.0",
    "@sentry/node": "^7.50.0",
    "@sentry/tracing": "^7.50.0",
    "aws-sdk": "^2.1369.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "car-info": "^0.1.3",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "13.0.0",
    "graphql-ws": "^5.12.1",
    "ioredis": "^5.3.2",
    "js-sha256": "^0.9.0",
    "nodemailer": "^6.9.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "2.0.0-beta.1",
    "uuid": "^9.0.0",
    "wkx": "^0.5.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "5.7.4",
    "@mikro-orm/migrations": "5.7.4",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/graphql-upload": "^8.0.5",
    "@types/node": "^18.16.3",
    "@types/nodemailer": "^6.4.7",
    "@types/uuid": "^9.0.1",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "concurrently": "^8.0.1",
    "eslint": "^8.39.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "volta": {
    "node": "18.10.0"
  }
}
