{
  "name": "@beep/api",
  "version": "1.0.0",
  "description": "GraphQL API for the Beep App",
  "main": "build/index.js",
  "private": true,
  "scripts": {
    "build": "npx tsc",
    "start": "node build/index.js",
    "dev": "concurrently --raw \"tsc -w --preserveWatchOutput\" \"nodemon build/index.js\"",
    "db:create": "npx mikro-orm schema:create --run",
    "db:update": "npx mikro-orm schema:update --run",
    "db:drop": "npx mikro-orm schema:drop --run",
    "db:migrate": "npx mikro-orm migration:up"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.nussman.us/beep-app/Beep.git"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./build/mikro-orm.config.js"
    ]
  },
  "author": "Banks Nussman",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/schema": "^8.5.0",
    "@mikro-orm/core": "^5.2.3",
    "@mikro-orm/postgresql": "^5.2.3",
    "@sentry/integrations": "^7.5.0",
    "@sentry/node": "^7.5.0",
    "@sentry/tracing": "^7.5.0",
    "apollo-server-core": "^3.6.1",
    "apollo-server-express": "^3.6.1",
    "aws-sdk": "^2.1168.0",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "got": "^11.8.3",
    "graphql": "^15.6.1",
    "graphql-fields-to-relations": "^1.0.5",
    "graphql-redis-subscriptions": "^2.4.2",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "^12.0.0",
    "graphql-ws": "^5.9.1",
    "ioredis": "^5.1.0",
    "js-sha256": "^0.9.0",
    "nodemailer": "^6.7.6",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "uuid": "^8.3.2",
    "wkx": "^0.5.0",
    "ws": "^8.4.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.2.3",
    "@mikro-orm/migrations": "^5.2.3",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.13",
    "@types/graphql-upload": "^8.0.5",
    "@types/ioredis": "^4.28.5",
    "@types/node": "^18.0.3",
    "@types/nodemailer": "^6.4.2",
    "@types/uuid": "^8.3.3",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "concurrently": "^7.2.1",
    "eslint": "^8.19.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  }
}
