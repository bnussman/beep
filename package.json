{
  "name": "@beep/monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/bnussman/beep.git"
  },
  "author": "Banks Nussman",
  "scripts": {
    "clean": "rm -rf node_modules/ && rm -rf app/node_modules/ && rm -rf website/node_modules && rm -rf api/node_modules && rm pnpm-lock.yaml",
    "build:api": "pnpm --filter @beep/api build",
    "build:website": "pnpm --filter @beep/website build",
    "build": "pnpm build:api",
    "dev": "bun --bun concurrently -n app,api,website -c blue,magenta,green \"pnpm --filter @beep/app web\" \"pnpm --filter @beep/api dev\" \"pnpm --filter @beep/website dev\"",
    "start:app": "pnpm --filter @beep/app start",
    "start:website": "pnpm --filter @beep/website dev",
    "start:api": "pnpm --filter @beep/api start",
    "codegen": "concurrently -n app,website -c blue,green \"pnpm --filter @beep/app codegen\" \"pnpm --filter @beep/website codegen\""
  },
  "private": true,
  "devDependencies": {
    "concurrently": "^8.2.1"
  },
  "resolutions": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "workspaces": ["api", "website", "app"],
  "volta": {
    "node": "19.4.0"
  }
}
